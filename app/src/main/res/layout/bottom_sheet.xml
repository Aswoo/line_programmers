<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/attach_image_camera"
        style="@style/ActionItem"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_filter_list"
        android:drawableLeft="@drawable/ic_filter_list"
        android:text="@string/attach_image_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/attach_image_gallery"
        style="@style/ActionItem"
        android:drawableStart="@drawable/baseline_attachment_24"
        android:drawableLeft="@drawable/baseline_attachment_24"
        android:text="@string/attach_image_local"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attach_image_camera" />

    <TextView
        android:id="@+id/attach_image_url"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_menu"
        android:drawableLeft="@drawable/ic_menu"
        android:text="@string/attach_iamge_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attach_image_gallery" />


</androidx.constraintlayout.widget.ConstraintLayout>
